#wrapper
  #columns
    - @users.each do |user|
      .pin.ready{ :"data-user" => user.id }
        .heading
          %h1= user.name
        .btn-group.message-btn
          %a.btn.btn-primary
            %i.icon-envelope.icon-white
            %span= "Write now!"
        .btn-group.price-btn
          %a.btn.btn-primary
            %i.icon-tag.icon-white
            %span= user.threshold
        = image_tag user.local_picture_path, alt: user.name
        .footer
          = "#{user.comment}..."
          = link_to "(view full profile)", @user, class: "profile-link"
          .links.redes
            - if user.auth_providers.any? 
              %h2= "#{user.name}'s profile on..."
            - user.auth_providers.each do |ap|
              .crop
                = link_to "#", "#", :class => "#{ap.provider} active"

